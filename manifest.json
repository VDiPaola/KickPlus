{
    "manifest_version": 3,
    "name": "Kick Plus",
    "version": "1.0.0",
    "description": "Hotfixes/improvements to kick.com",
    "icons":{
        "128": "icon.png",
        "48": "icon.png",
        "16": "icon.png"
    },

    "permissions": [
        "scripting",
        "storage",
        "cookies"
    ],

    "background":{
        "service_worker":"./dist/background.js",
        "type": "module"
    },

    "content_scripts": [{
        "matches":    ["*://*.kick.com/*"],
        "js":         ["./dist/content-scripts/main.js"]
    },{
        "css": [ "./main.css" ],
        "matches":    ["*://*.kick.com/*"]
     } ],

     "host_permissions": [
        "*://*.kick.com/*"
    ],

    "action": {
        "default_popup": "./popup/popup.html"
      },

      "options_page": "./options-page/index.html"


}