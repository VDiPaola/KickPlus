{
    "manifest_version": 2,
    "name": "Kick Plus",
    "version": "1.7.0",
    "description": "improvements to kick.com",
    "icons":{
        "128": "icon.png",
        "48": "icon.png",
        "16": "icon.png"
    },

    "permissions": [
        "cookies",
        "contextMenus",
        "storage",
        "*://*.kick.com/*",
        "*://*.enzon1k.com/*"
    ],

    "background":{
        "scripts":["./dist/background.js"]
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "kickplus@example.org"
        }
    },

    "content_scripts": [{
        "matches":    ["*://*.kick.com/*", "*://*.enzon1k.com/*"],
        "js":         ["./dist/content-scripts/main.js"]
    },{
        "css": [ "./styles/main.css","./styles/settings.css","./styles/userChatBox.css" ],
        "matches":    ["*://*.kick.com/*"]
     } ]


}